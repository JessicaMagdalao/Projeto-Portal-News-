<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Portal de notícias</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- incluindo css -->
		<link href="css/style-bootstrap3.css" rel="stylesheet">
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="images/favicon.ico" />
	</head>

	<body>		
		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<img src="images/logo.png" />
				</div>
				<%-include('../partes/navbar')%>
			</div>
		</nav>
	    <div class="container">
			<%if(validacao.length>0){%>
				<div class="row">
					<div class="col-md-12 ">
						<div class="alert alert-danger">
							<strong>Atenção!</strong>
							<ul>
								<%for(var i=0;i<validacao.length;i++){%>
									<li><%=validacao[i].msg%></li>
								<%}%>
							</ul>
						</div>
					</div>
				</div>
			<%}%>
	    	<div class="row">
				<%console.log(JNoticias[0])%>
	    		<div class="col-md-12">
	    			<div class="noticia_wrapper">
						<img src="/uploads/<%=JNoticias[0].img%>" class="img-responsive img-rounded center-block" alt="imagem">
		    			<span class="noticia_autor"><%=JNoticias[0].autor%></span>
		    			<a href="#" class="noticia_titulo"><%=JNoticias[0].titulo%></a>
		    			<span class="noticia_data"><%=JNoticias[0].data_noticia%></span>
		    			<br />
		    			<p class="noticia_resumo">
		    				<%=JNoticias[0].texto%>
		    			</p>
		    		</div>
		    	</div>
	    	</div>
			<form action="/salvar_notas?id_noticia=<%=JNoticias[0].id%>" method="post">
				<div class="form-group">
					<label for="pwd">Notas do Redator:</label>
					<textarea class="form-control" id="notas" name="notas"><%=JNoticias[0].notas%></textarea>
				</div>
				<button type="submit" class="btn btn-default">Salvar</button>
			</form>
	    </div>			
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	</body>
</html>